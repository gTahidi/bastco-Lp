---
import Layout from "../layouts/Layout.astro";
import CalBookingEmbed from "../components/CalBookingEmbed.tsx";

const title = "Kifaru - Autonomous Security Agent";
const description = "CLI-based autonomous security agent for red teaming, powered by LLMs.";
---

<Layout title={title} description={description}>
  <section class="min-h-screen flex flex-col items-center justify-center pt-32 pb-20 px-4 font-mono bg-bs-surface-0 relative overflow-hidden">
    
    <!-- Background Grid Effect -->
    <div class="absolute inset-0 z-0 opacity-10 pointer-events-none" 
         style="background-image: linear-gradient(var(--color-bs-primary) 1px, transparent 1px), linear-gradient(90deg, var(--color-bs-primary) 1px, transparent 1px); background-size: 40px 40px;">
    </div>

    <!-- Terminal Window -->
    <div class="w-full max-w-4xl relative z-10 bg-bs-surface-1 border border-bs-primary/30 rounded-lg overflow-hidden shadow-2xl shadow-bs-primary/10">
      
      <!-- Terminal Header -->
      <div class="bg-bs-surface-3 px-4 py-2 flex items-center gap-2 border-b border-bs-primary/30 select-none">
        <div class="flex gap-2">
          <div class="w-3 h-3 rounded-full bg-red-500/80"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-500/80"></div>
          <div class="w-3 h-3 rounded-full bg-green-500/80"></div>
        </div>
        <div class="ml-4 text-xs text-bs-foreground-dark opacity-70 font-sans">kifaru — -bash — 80x24</div>
      </div>

      <!-- Terminal Content -->
      <div class="p-6 md:p-12 space-y-10 text-bs-foreground-light">
        
        <!-- Hero Section -->
        <div class="space-y-6">
          <div class="flex items-center gap-2 text-bs-primary animate-pulse">
            <span>&gt;</span>
            <span class="typing-effect">./kifaru --init --mode=red-team</span>
          </div>
          
          <div class="space-y-2">
            <h1 class="text-4xl md:text-7xl font-bold tracking-tighter text-transparent bg-clip-text bg-gradient-to-r from-bs-primary to-bs-secondary uppercase">
              KIFARU
            </h1>
            <div class="h-1 w-24 bg-bs-primary"></div>
          </div>
          
          <p class="text-xl md:text-2xl text-bs-foreground-dark max-w-2xl leading-relaxed">
            The autonomous security agent. <br/>
            <span class="text-bs-accent text-lg">Thinking like an attacker, so you don't have to.</span>
          </p>
        </div>

        <!-- Features Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-12">
          <!-- Feature 1 -->
          <div class="group border border-bs-primary/20 p-6 rounded hover:border-bs-primary/60 hover:bg-bs-primary/5 transition-all duration-300">
            <h3 class="text-bs-secondary text-lg font-bold mb-3 flex items-center gap-2">
              <span class="text-bs-primary opacity-50">&gt;</span> Red Teaming
            </h3>
            <p class="text-sm text-bs-foreground-dark leading-relaxed group-hover:text-bs-foreground-light transition-colors">
              Continuous, automated adversary simulation. Kifaru probes your infrastructure to identify critical vulnerabilities before they are exploited.
            </p>
          </div>
          
           <!-- Feature 2 -->
          <div class="group border border-bs-primary/20 p-6 rounded hover:border-bs-primary/60 hover:bg-bs-primary/5 transition-all duration-300">
            <h3 class="text-bs-secondary text-lg font-bold mb-3 flex items-center gap-2">
              <span class="text-bs-primary opacity-50">&gt;</span> LLM Powered
            </h3>
            <p class="text-sm text-bs-foreground-dark leading-relaxed group-hover:text-bs-foreground-light transition-colors">
              Built on advanced large language models to reason through complex attack vectors and adapt to your unique environment.
            </p>
          </div>
          
           <!-- Feature 3 -->
          <div class="group border border-bs-primary/20 p-6 rounded hover:border-bs-primary/60 hover:bg-bs-primary/5 transition-all duration-300">
            <h3 class="text-bs-secondary text-lg font-bold mb-3 flex items-center gap-2">
               <span class="text-bs-primary opacity-50">&gt;</span> Lightweight CLI
            </h3>
            <p class="text-sm text-bs-foreground-dark leading-relaxed group-hover:text-bs-foreground-light transition-colors">
              A single binary with minimal footprint. Designed for speed, portability, and easy integration into CI/CD pipelines.
            </p>
          </div>
          
           <!-- Feature 4 -->
          <div class="group border border-bs-primary/20 p-6 rounded hover:border-bs-primary/60 hover:bg-bs-primary/5 transition-all duration-300">
            <h3 class="text-bs-secondary text-lg font-bold mb-3 flex items-center gap-2">
               <span class="text-bs-primary opacity-50">&gt;</span> Extensible
            </h3>
            <p class="text-sm text-bs-foreground-dark leading-relaxed group-hover:text-bs-foreground-light transition-colors">
              Modular architecture allowing custom plugins. Extend Kifaru's capabilities to match your specific security requirements.
            </p>
          </div>
        </div>

        <!-- Booking Section -->
        <div class="pt-12 border-t border-bs-primary/20">
             <div class="mb-8">
               <p class="text-bs-accent font-bold mb-2">&gt; status_check</p>
               <p class="text-bs-foreground-light">System online. Agents ready for deployment.</p>
               <p class="text-bs-foreground-dark mt-2">Initialize consultation sequence below:</p>
             </div>
             
             <!-- Cal Widget Wrapper -->
             <div class="bg-bs-surface-0/80 border border-bs-primary/10 rounded-lg p-1 backdrop-blur-sm">
                <CalBookingEmbed client:load />
             </div>
        </div>

      </div>
    </div>
  </section>
</Layout>
