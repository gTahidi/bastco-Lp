---
import Layout from "../../layouts/Layout.astro"

import global_settings from "../../data/global_settings.json"
import services from "../../data/services.json"

const service = services.find((item) => item.slug === "enterprise-software")
if (!service) {
  throw new Error("Enterprise Software service not found. Ensure services.json contains the entry.")
}

const pageTitle = `${service.title} â€¢ ${global_settings.title}`
const pageDescription = service.description
const highlights: string[] = service.highlights ?? []

const blueprint = [
  "ATS & onboarding flows tied to HR and finance",
  "Payroll and compliance rules for local markets",
  "Frappe extensions packaged for safe upgrades",
]

const offerings = [
  {
    title: "Implementation sprint",
    points: ["Blueprint & rollout", "Team enablement"],
  },
  {
    title: "Managed platform",
    points: ["Upgrades & support", "Release monitoring"],
  },
  {
    title: "Co-build squad",
    points: ["BastCo engineers embedded", "Shared backlog delivery"],
  },
]
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="bs-section">
    <div class="bs-container grid gap-14 lg:grid-cols-[minmax(0,1.15fr)_minmax(0,0.85fr)] items-start">
      <div class="space-y-8 lg:pr-12">
        <span class="inline-flex items-center gap-2 text-xs font-semibold tracking-[0.4em] uppercase text-bs-secondary">Enterprise Delivery</span>
        <div class="space-y-5 max-w-3xl">
          <h1 class="bs-h1 text-balance">{ service.title }</h1>
          <p class="bs-body-text text-lg text-bs-foreground-dark leading-relaxed">
            We tailor ERPNext on Frappe so hiring, payroll, and operations live in one platform that matches your policies.
          </p>
        </div>
        {highlights.length > 0 && (
          <div class="max-w-2xl">
            <ul class="grid gap-4 md:grid-cols-2">
              {highlights.map((item) => (
                <li class="rounded-2xl border border-bs-surface-3/60 bg-bs-surface-2/70 p-5 text-sm text-bs-foreground-dark flex items-start gap-3">
                  <span class="mt-1 inline-flex h-2 w-2 rounded-full bg-bs-primary"></span>
                  <span>{ item }</span>
                </li>
              ))}
            </ul>
          </div>
        )}
        <div class="flex flex-wrap gap-3">
          <a href="/#contact" class="bs-btn bs-btn-primary">Talk to implementation</a>
          <a href="https://cal.com/bastco/intro-call" target="_blank" rel="noopener noreferrer" class="bs-btn">Book a scoping call</a>
        </div>
      </div>
      <aside class="relative overflow-hidden rounded-[2.5rem] border border-bs-surface-3/70 bg-bs-surface-2/80 backdrop-blur">
        <div class="absolute inset-0 bg-gradient-to-br from-bs-primary/18 via-transparent to-bs-secondary/20" aria-hidden="true"></div>
        <div class="relative p-8 space-y-5">
          <h2 class="bs-h3 text-bs-foreground-light">Platform blueprint</h2>
          <ul class="space-y-3 text-sm text-bs-foreground-dark leading-relaxed">
            {blueprint.map((item) => (
              <li class="flex items-start gap-3">
                <span class="mt-1 inline-flex h-2 w-2 rounded-full bg-bs-primary"></span>
                <span>{ item }</span>
              </li>
            ))}
          </ul>
        </div>
      </aside>
    </div>
  </section>

  <section class="bs-section">
    <div class="bs-container space-y-10">
      <div class="max-w-2xl space-y-3">
        <h2 class="bs-h3 text-bs-foreground-light">Engagement models</h2>
        <p class="bs-body-text text-bs-foreground-dark leading-relaxed">
          We combine packaged accelerators with co-build teams so your ERP foundation rolls out quickly and keeps improving.
        </p>
      </div>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {offerings.map((card) => (
          <article class="h-full rounded-2xl border border-bs-surface-3/70 bg-bs-surface-2/70 p-6 space-y-3">
            <h3 class="text-base font-semibold text-bs-foreground-light">{ card.title }</h3>
            <ul class="space-y-2 text-sm text-bs-foreground-dark">
              {card.points.map((point) => (
                <li class="flex items-start gap-2">
                  <span class="mt-2 inline-flex h-1.5 w-1.5 rounded-full bg-bs-primary"></span>
                  <span>{ point }</span>
                </li>
              ))}
            </ul>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>
