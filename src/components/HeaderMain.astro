---
const { settings } = Astro.props
const githubLink = settings.social_links?.find(
  (item) => item.title.toLowerCase() === 'github'
)?.link ?? 'https://github.com/orgs/Bastsec/'
---

<header class="wrapper relative sticky top-0 z-40 font-semibold bg-gradient-to-b from-[#070c14]/98 via-[#080f18]/96 to-[#0b121c]/92 backdrop-blur-2xl">

  <div class="absolute inset-0 -z-10 pointer-events-none" aria-hidden="true">
    <div class="absolute inset-0 bg-[radial-gradient(120%_120%_at_15%_-40%,rgba(0,174,239,0.3),transparent)]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(90%_90%_at_85%_-25%,rgba(74,222,128,0.14),transparent)]"></div>
    <div class="absolute inset-x-0 bottom-0 h-52 bg-gradient-to-b from-transparent via-[#0b121c]/80 to-[#0b121c]"></div>
  </div>

  <!-- Wrapper -->
  <div class="bs-container py-5 flex justify-between items-center gap-6">

    <!-- Logo -->
    <a class="flex items-center gap-4 group" href="/" aria-label={ settings.title + ' - Home' }>
      <span class="relative flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-br from-bs-primary/80 via-bs-secondary/60 to-white/30 shadow-[0_12px_30px_rgba(0,174,239,0.35)] transition-transform duration-500 group-hover:scale-105">
        <span class="absolute h-2.5 w-6 rounded-full bg-white/75 -rotate-[14deg] translate-y-1"></span>
        <span class="absolute h-2.5 w-6 rounded-full bg-white/55 rotate-[18deg] -translate-y-1.5"></span>
      </span>
      <span class="font-display text-2xl font-semibold italic tracking-[0.08em] text-transparent bg-clip-text bg-gradient-to-r from-white via-bs-secondary to-bs-primary drop-shadow-[0_4px_18px_rgba(0,174,239,0.45)]">
        BastCo
      </span>
    </a>

    <!-- Nav -->
    <nav class="hidden md:flex items-center gap-2 rounded-full border border-bs-surface-3/60 bg-bs-surface-1/70 px-2 py-1 shadow-[0_18px_45px_rgba(0,0,0,0.45)] backdrop-blur">

      <!-- Links -->
      { settings.nav.map((item) => {
        const baseClass =
          "relative inline-flex items-center gap-2 rounded-full px-5 py-2 text-sm font-medium text-bs-foreground-light transition-all duration-300 hover:-translate-y-0.5 hover:text-white before:absolute before:inset-0 before:rounded-full before:bg-white/6 before:opacity-0 before:transition-opacity before:duration-300 hover:before:opacity-100 shadow-[0_12px_30px_rgba(0,0,0,0.35)]";

        return (
          <a
            class={baseClass}
            href={item.link}
          >
            { item.title }
          </a>
        );
      })}

    </nav>

    <!-- GitHub -->
    <a
      href={githubLink}
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Visit BastCo on GitHub"
      class="inline-flex h-12 w-12 items-center justify-center rounded-full border border-bs-surface-3/60 bg-bs-surface-1/70 text-bs-secondary transition duration-300 hover:border-bs-secondary hover:text-bs-foreground-light hover:shadow-[0_10px_30px_rgba(0,174,239,0.25)]"
    >
      <svg aria-hidden="true" viewBox="0 0 24 24" class="h-6 w-6">
        <path
          fill="currentColor"
          d="M12 .5a11.5 11.5 0 0 0-3.64 22.43c.58.1.79-.25.79-.56v-2c-3.22.7-3.9-1.55-3.9-1.55-.53-1.35-1.3-1.7-1.3-1.7-1.06-.74.08-.73.08-.73 1.17.08 1.79 1.2 1.79 1.2 1.04 1.78 2.73 1.26 3.4.96a2.5 2.5 0 0 1 .75-1.57c-2.57-.3-5.28-1.28-5.28-5.67 0-1.25.45-2.28 1.2-3.08-.12-.3-.52-1.53.12-3.19 0 0 .98-.31 3.2 1.18a11.04 11.04 0 0 1 5.83 0c2.22-1.49 3.2-1.18 3.2-1.18.64 1.66.24 2.89.12 3.19.75.8 1.2 1.83 1.2 3.08 0 4.41-2.72 5.36-5.3 5.65.41.36.79 1.07.79 2.16v3.2c0 .31.21.66.8.55A11.5 11.5 0 0 0 12 .5Z"
        />
      </svg>
    </a>

  </div>

</header>
