---
import { ContainerTextFlip } from "./ui/container-text-flip.tsx";

const { title, content } = Astro.props

const accentLogos = [
  "/content-images/logo-03.svg",
  "/content-images/logo-07.svg",
  "/content-images/logo-10.svg",
]

const focusWords = [
  "Security Research",
  "Managed Response",
  "Secure Automation",
  "Product Hardening",
  "Incident Recovery",
]

---

<section class="relative overflow-hidden pt-36 pb-56 sm:pt-48 sm:pb-68 lg:pt-52 lg:pb-80">

  <!-- Background wash -->
  <div class="absolute inset-x-0 -top-56 h-[36rem] opacity-45 blur-3xl pointer-events-none" aria-hidden="true">
    <img src="/content-images/blackspike-wallpaper-02.avif" alt="" class="w-full h-full object-cover" loading="lazy" decoding="async" />
    <div class="absolute inset-0 bg-gradient-to-b from-[#0b121c] via-transparent to-transparent"></div>
  </div>

  <!-- Layout -->
  <div class="bs-container relative grid items-center gap-16 lg:grid-cols-[minmax(0,1fr)_minmax(0,0.9fr)]">

    <!-- Content -->
    <div class="flex flex-col gap-10 max-w-3xl mx-auto lg:mx-0 text-center lg:text-left">

    

      <h1 class="bs-h1" set:html={ title } />

      <div class="bs-body-text xl:text-xl flex flex-col gap-4 text-bs-foreground-dark" set:html={ content } />

      <div class="flex flex-col items-center lg:items-start gap-10 sm:gap-12">
        <div class="flex flex-col sm:flex-row items-center sm:items-start gap-4 sm:gap-6">
          <a href="#contact" class="bs-btn bs-btn-primary px-10">
            Get a Free Consultation
          </a>
        </div>

        <!-- Accent logos -->
        <div class="hidden sm:flex w-full items-center justify-center lg:justify-start gap-10 opacity-70">
          {accentLogos.map((logo) => (
            <img src={logo} alt="Client logo" class="h-9 w-auto object-contain" loading="lazy" decoding="async" />
          ))}
        </div>
      </div>

    </div>

    <!-- Hero highlights -->
    <div class="relative flex flex-col gap-6">
      <div class="absolute -inset-6 bg-gradient-to-br from-bs-primary/20 via-transparent to-bs-secondary/15 rounded-[2.5rem] blur-3xl" aria-hidden="true"></div>
      <div class="relative overflow-hidden rounded-[2.25rem] border border-bs-surface-3/70 bg-bs-surface-2/70 backdrop-blur shadow-[0_35px_80px_rgba(0,0,0,0.35)]">
        <div class="grid gap-8 p-8 md:p-10">
          <header class="space-y-6">
            <p class="text-xs font-semibold uppercase tracking-[0.4em] text-bs-secondary/90">Focus Areas</p>
            <div class="flex justify-center">
              <ContainerTextFlip
                client:load
                words={focusWords}
                interval={2800}
                animationDuration={800}
                className="px-4"
                textClassName="font-display text-bs-foreground-light text-3xl md:text-5xl tracking-tight"
              />
            </div>
        
          </header>

        </div>
      </div>

      
      </div>
    </div>

  </div>

</section>
